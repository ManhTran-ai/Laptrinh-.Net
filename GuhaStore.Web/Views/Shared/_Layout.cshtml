@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuhaStore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuhaStore.Web.styles.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: #1a1a1a;
            background-color: #ffffff;
        }

        /* Topbar/header styles moved to site.css to ensure a single consistent header across the site and admin.
           Keep no header-specific rules here to avoid duplication/override. */

        .footer {
            border-top: 1px solid #eee;
            padding: 3rem 0;
            text-align: center;
            margin-top: 4rem;
            color: #666;
        }
        /* Force buttons to black background with white text */
        .btn, button, input[type="submit"], a.btn {
            background: #111 !important;
            color: #fff !important;
            border: none !important;
            padding: 8px 12px;
            border-radius: 6px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        .btn-outline-primary {
            background: transparent !important;
            color: #111 !important;
            border: 1px solid #111 !important;
        }
        /* Pagination: force page numbers to be black */
        .pagination .page-link {
            color: #000 !important;
        }
        .pagination .page-item.active .page-link {
            color: #000 !important;
        }
    </style>
</head>
<body>
    <partial name="_Topbar" />
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
        </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
