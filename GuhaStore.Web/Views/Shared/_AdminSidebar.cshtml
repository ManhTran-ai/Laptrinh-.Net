@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var path = ViewContext.HttpContext.Request.Path.Value?.ToLower() ?? "";
}
<link rel="stylesheet" href="~/css/admin.css" />

<aside class="sidebar">
    <div class="sidebar-header">
        <h2>GuhaStore</h2>
        <span>Trang quản lý</span>
    </div>

    <nav>
        <ul class="sidebar-nav">
            <li>
                <a href="@Url.Action("Index","Admin")" class="@(path == "/" || path == "/admin" ? "active" : "")">
                Trang chủ
                </a>
            </li>
            <li>
                <a href="@Url.Action("Products","Admin")" class="@(path.Contains("/admin/products") ? "active" : "")">
                  Sản phẩm
                </a>
            </li>
            <li>
                <a href="@Url.Action("Orders","Admin")" class="@(path.Contains("/admin/orders") ? "active" : "")">
                   Đơn hàng
                </a>
            </li>
            <!-- Article menu removed -->
        </ul>
    </nav>
</aside>


