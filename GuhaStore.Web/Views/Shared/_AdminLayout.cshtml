@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuhaStore Admin</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuhaStore.Web.styles.css" asp-append-version="true" />
    @* Load admin.css only for admin pages to avoid duplicate/ conflicting rules *@
    @{
        var isAdmin = Context.Request.Path.HasValue && Context.Request.Path.Value.ToLower().StartsWith("/admin");
    }
    @if (isAdmin)
    {
        <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    }
    <style>
        /* Minimal base overrides kept in layout; admin-specific styles live in admin.css */
        * { box-sizing: border-box; }
        body { margin: 0; background: #fff; color: #1a1a1a; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; }
        /* Ensure header container uses same width as admin content */
        .header .container { max-width: 1200px; margin: 0 auto; padding: 0 24px; }
    </style>
</head>
<body>
    <partial name="_Topbar" />

    <!-- Admin Layout -->
    <div class="admin-layout">
        <partial name="_AdminSidebar" />
        <div class="admin-main">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
