@model GuhaStore.Web.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Thông tin giao hàng</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessOrder" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="DeliveryName" class="form-label"></label>
                            <input asp-for="DeliveryName" class="form-control" />
                            <span asp-validation-for="DeliveryName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DeliveryPhone" class="form-label"></label>
                            <input asp-for="DeliveryPhone" class="form-control" />
                            <span asp-validation-for="DeliveryPhone" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DeliveryAddress" class="form-label"></label>
                            <textarea asp-for="DeliveryAddress" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DeliveryNote" class="form-label"></label>
                            <textarea asp-for="DeliveryNote" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="DeliveryNote" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <strong>Phương thức thanh toán:</strong> Tiền mặt khi nhận hàng (COD)
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">Đặt hàng</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Tóm tắt đơn hàng</h5>
                </div>
                <div class="card-body">
                    @if (Model.CartItems.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    var itemDict = item.Value;
                                    if (itemDict != null)
                                    {
                                        // robust decimal conversion for various runtime types
                                        object totalObj = itemDict.GetValueOrDefault("Total");
                                        decimal total = 0m;
                                        if (totalObj is decimal dec) total = dec;
                                        else if (totalObj is double dbl) total = (decimal)dbl;
                                        else if (totalObj is float fl) total = (decimal)fl;
                                        else if (totalObj is int i) total = i;
                                        else if (totalObj is long l) total = l;
                                        else if (totalObj is string s && decimal.TryParse(s, out var parsed)) total = parsed;
                                        else
                                        {
                                            // handle JsonElement (if present) or fallback to Convert.ToDecimal via string
                                            try
                                            {
                                                if (totalObj is System.Text.Json.JsonElement je)
                                                {
                                                    if (je.ValueKind == System.Text.Json.JsonValueKind.Number && je.TryGetDecimal(out var jd))
                                                    {
                                                        total = jd;
                                                    }
                                                    else
                                                    {
                                                        var str = je.ToString();
                                                        decimal.TryParse(str, out total);
                                                    }
                                                }
                                                else
                                                {
                                                    decimal.TryParse(Convert.ToString(totalObj), out total);
                                                }
                                            }
                                            catch
                                            {
                                                total = 0m;
                                            }
                                        }
                                        <tr>
                                            <td>
                                                @itemDict.GetValueOrDefault("ProductName") x @itemDict.GetValueOrDefault("Quantity")
                                            </td>
                                            <td class="text-end">
                                                @total.ToString("N0") VNĐ
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Tổng cộng:</th>
                                    <th class="text-end">@Model.TotalAmount.ToString("N0") VNĐ</th>
                                </tr>
                            </tfoot>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

