@model GuhaStore.Core.Entities.Order
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center mb-0">Đặt hàng thành công!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4 class="mt-3">Cảm ơn bạn đã đặt hàng</h4>
                        <p class="text-muted">Mã đơn hàng của bạn: <strong>#@Model.OrderCode</strong></p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Thông tin đơn hàng</h5>
                            <p><strong>Mã đơn hàng:</strong> #@Model.OrderCode</p>
                            <p><strong>Ngày đặt:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                            <p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("N0") VNĐ</p>
                            <p><strong>Phương thức thanh toán:</strong> Tiền mặt khi nhận hàng (COD)</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Thông tin giao hàng</h5>
                            <p><strong>Người nhận:</strong> @(Model.User?.FullName ?? "N/A")</p>
                            <p><strong>Điện thoại:</strong> @Model.Phone</p>
                            <p><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <p><strong>Ghi chú:</strong> @Model.Notes</p>
                            }
                        </div>
                    </div>

                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                    {
                        <h5>Chi tiết đơn hàng</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th class="text-end">Giá</th>
                                    <th class="text-end">Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@(item.Product?.Name ?? "N/A")</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0") VNĐ</td>
                                        <td class="text-end">@item.Total.ToString("N0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Tổng cộng:</th>
                                    <th class="text-end">@Model.TotalAmount.ToString("N0") VNĐ</th>
                                </tr>
                            </tfoot>
                        </table>
                    }

                    <div class="text-center mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Tiếp tục mua sắm</a>
                        <a asp-action="OrderHistory" asp-controller="Account" class="btn btn-outline-secondary">Xem lịch sử đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

