@model IEnumerable<GuhaStore.Core.Entities.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

<div class="admin-container">
    <div class="admin-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1>Quản lý sản phẩm</h1>
        <a asp-action="CreateProduct" class="btn btn-primary">+ Thêm sản phẩm</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card">
        <div class="card-body">
            <script src="~/js/admin.js"></script>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert success">@TempData["SuccessMessage"]</div>
    }
    <div class="table-container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hình</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Giá KM</th>
                <th>Danh mục</th>
                <th>Thương hiệu</th>
                <th>Tồn kho</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td class="center">@p.Id</td>
                    <td class="img-col">
                        @{
                            var img = string.IsNullOrEmpty(p.ImageUrl) ? Url.Content("~/images/img_1.png") : Url.Content(p.ImageUrl);
                        }
                        <img src="@img" alt="@p.Name" />
                    </td>
                    <td class="name">@p.Name</td>
                    <td class="right">@p.Price.ToString("N0")₫</td>
                    <td class="right">@(p.SalePrice.HasValue ? p.SalePrice.Value.ToString("N0") + "₫" : "-")</td>
                    <td class="center">@(p.Category?.Name ?? "-")</td>
                    <td class="center">@(p.Brand?.Name ?? "-")</td>
                    <td class="center">@p.StockQuantity</td>
                    <td class="center">@(p.IsActive ? "Hoạt động" : "Không hoạt động")</td>
                    <td class="center">@p.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@p.Id" class="btn">Sửa</a>
                        <form asp-action="DeleteProduct" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p.Id" />
                            <button type="submit" class="btn" onclick="return confirm('Xóa sản phẩm?')">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
            </table>
    </div>
        </div>
    </div>
</div>


